{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "main:app",
                "--host",
                "0.0.0.0",
                "--port",
                "6980"
            ]
        }
    ]
}
